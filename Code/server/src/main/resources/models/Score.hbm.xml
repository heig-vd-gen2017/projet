<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
    <class name="ch.tofind.reflexia.game.Score" table="score" optimistic-lock="version">
        <meta attribute="class-description">
            This class represents the link between a player and a mode associated with a score.
        </meta>
        <composite-id name="id" class="ch.tofind.reflexia.game.ScoreId">
            <key-many-to-one name="player" column="player_id"/>
            <key-many-to-one name="mode" column="mode_id"/>
        </composite-id>
        <property name="best_score" column="best_score" type="int" not-null="true"/>
        <property name="date" column="date" type="timestamp" length="50" not-null="true"/>
    </class>
</hibernate-mapping>