<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
    <class name="ch.tofind.reflexia.game.Player" table="player">
        <meta attribute="class-description">
            This class represents a game player
        </meta>
        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>
        <version name="version" column="version"/>
        <property name="pseudo" column="title" type="string" length="50" not-null="true"/>
        <property name="dateAdded" column="date_added" type="timestamp" length="50" not-null="true"/>
        <property name="datePlayed" column="date_played" type="timestamp" length="50" not-null="false"/>
    </class>
</hibernate-mapping>